<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="    Certificado de Residencia"
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editNombre"
            android:hint="Nombre completo"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textColorHint="#555555"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editRut"
            android:hint="RUT (Ej: 12345678-9)"
            android:textSize="20sp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textColorHint="#555555"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editDireccion"
            android:hint="Dirección actual"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textColorHint="#555555"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editComuna"
            android:hint="Comuna"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textColorHint="#555555"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editTelefono"
            android:hint="Teléfono de contacto"
            android:textSize="20sp"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textColorHint="#555555"
            android:layout_marginBottom="16dp" />

        <Spinner
            android:id="@+id/spinnerMotivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnEnviar"
            android:text="Enviar solicitud"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:textSize="22sp"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>