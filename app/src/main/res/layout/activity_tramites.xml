<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center">

        <!-- Texto de bienvenida -->
        <TextView
            android:id="@+id/txtBienvenida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido/a"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Fila 1: Residencia + Permiso de Circulación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/btnResidencia"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="8dp"
                android:background="@drawable/btn_square"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/residencia"
                    android:contentDescription="Certificado de Residencia" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Residencia"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnPermisoCirculacion"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="8dp"
                android:background="@drawable/btn_square"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/circulacion"
                    android:contentDescription="Permiso de Circulación" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Circulación"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Fila 2: Ver trámites de Circulación + Licencias de Conducir -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/btnVerCirculacion"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="8dp"
                android:background="@drawable/btn_square"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ver_circulacion"
                    android:contentDescription="Ver trámites de circulación" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver trámites"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLicencia"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="8dp"
                android:background="@drawable/btn_square"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/licencias"
                    android:contentDescription="Licencias de Conducir" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Licencias"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Fila 3: Patentes + Obras Municipales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/btnPatente"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="8dp"
                android:background="@drawable/btn_square"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/patente"
                    android:contentDescription="Patentes Comerciales" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patentes"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnObras"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="8dp"
                android:background="@drawable/btn_square"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/obras"
                    android:contentDescription="Certificados de Obras" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obras"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Fila 4: Juzgado de Policía Local (centrado) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnJuzgado"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="8dp"
                android:background="@drawable/btn_square"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/juzgado"
                    android:contentDescription="Juzgado de Policía Local" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juzgado"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>